---
import clsx from "clsx";
import { technologies } from "../../data/index";
import TechnologyCard from "../cards/technology-card.astro";
import Heading from "../heading.astro";
---

<section id="technologies" class="space-y-16 w-full py-16 default-container">
  <Heading
    title="Technologies i use."
    description="The programming languages and tools I use in my development process enable me to create solutions for different needs in each project.Â "
    tag="Technologies"
  />
  <div class="grid sm:grid-cols-2 lg:grid-cols-6 gap-6">
    {
      technologies.map((item, index) => (
        <TechnologyCard
          className={clsx(index <= 1 ? "lg:col-span-3" : "lg:col-span-2")}
          {...item}
        />
      ))
    }
  </div>
</section>
