---
import { ArrowUpRight } from "lucide-astro";
import { projects } from "../../data/index";
import ProjectCard from "../cards/project-card.astro";
import Heading from "../heading.astro";
import Button from "../ui/button.astro";
---

<div class="space-y-16 w-full py-16 default-container">
  <Heading
    title="Collaborative Projects."
    description="Projects I contributed to by working with different teams. Each of them gave me new skills and experiences.Â "
    tag="Projects"
  />
  {
    projects.map((item, index) => (
      <ProjectCard {...item} reversed={index % 2 == 1} />
    ))
  }

  <div class="flex justify-center">
    <Button href="/projects">
      View All Projects <ArrowUpRight class="size-5" />
    </Button>
  </div>
</div>
