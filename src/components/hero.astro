---
import { Icon } from "astro-icon/components";
import Button from "./ui/button.astro";
import { Image } from "astro:assets";
import Umit from "../assets/images/umit.webp";
import ScrollMoreButton from "./ui/scroll-more-button.astro";
---

<section
  class="hero pt-10 sm:pt-24 border-b max-lg:flex-col border-zinc-100 dark:border-zinc-900 relative overflow-hidden mt-[90px] min-h-[60dvh] default-container flex justify-start"
>
  <div class="text-start">
    <div class="overflow-hidden w-fit text-white">
      <h1
        class="text-5xl pt-2 split-text sm:text-7xl flex font-semibold leading-[75px] dark:text-white text-black mb-3"
      >
        Hi 👋🏻, I'm Ümit!
      </h1>
    </div>
    <p class="text-zinc-500 text-lg dark:text-zinc-400 mb-6 max-w-2xl">
      I'm a Frontend Developer crafting user-friendly, visually appealing, and
      functional web interfaces. With modern technologies and innovative
      solutions, I'm ready to bring your projects to life!
    </p>
    <Button>
      Download CV <Icon name="download" class="size-4" />
    </Button>
  </div>

  <div class="relative">
    <Image
      src={Umit}
      alt="hero-image"
      loading="eager"
      class="w-full umit duration-200 max-lg:max-w-lg lg:min-w-[500px] relative max-lg:mx-auto max-lg:mt-10 lg:right-20"
    />
  </div>

  <div class="absolute right-3 bottom-3 sm:bottom-10 sm:right-10">
    <ScrollMoreButton />
  </div>
</section>
